{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true,
    "typeRoots": [
      "./typings"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
